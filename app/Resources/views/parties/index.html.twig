{% extends 'base.html.twig' %}

{% block body %}
    <h1>Parties list</h1>

    <table>
        <thead>
        <tr>
            <th>Id</th>
            <th>Debut</th>
            <th>Fin</th>
            <th>Pointj1</th>
            <th>Pointj2</th>
            <th>Tourde</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for party in parties %}
            <tr>
                <td><a href="{{ path('admin_parties_show', { 'id': party.id }) }}">{{ party.id }}</a></td>
                <td>{% if party.debut %}{{ party.debut|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if party.fin %}{{ party.fin|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ party.pointJ1 }}</td>
                <td>{{ party.pointJ2 }}</td>
                <td>{{ party.tourde }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_parties_show', { 'id': party.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_parties_edit', { 'id': party.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_parties_new') }}">Create a new party</a>
        </li>
    </ul>
{% endblock %}
