{% extends 'base.html.twig' %}

{% block body %}
    <h1>Partie entre {{ partie.joueur1.username }} et {{ partie.joueur2.username }}</h1>
    <h2>{{ user.id }} - {{ tour }}</h2>
    {% if tour==user.id %}
        <h2>A toi de jouer !</h2>
    {% else %}
        <h2>C'est au tour de votre adversaire</h2>
    {% endif %}
    <hr>
<h2>Dump plateau</h2>
{{ dump(plateau) }}
    <h2>Dump pioche</h2>
    {{ dump(pioche) }}
    <h2>Element</h2>
    {{ dump(element) }}

    <h2>Nouvelle Situation</h2>
    {{ dump(situation) }}

    <h2>Id</h2>
    {{ partie.id }}

    <h2>user id j1</h2>
    {{ dump(useridj1) }}

    <h2>user id j2</h2>
    {{ dump(useridj2) }}

    <h2>Partie</h2>
    {{ dump(partie) }}
{% endblock %}