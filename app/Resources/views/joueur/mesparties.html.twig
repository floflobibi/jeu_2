{% extends 'base.html.twig' %}

{% block body %}
    <h1>Espace joueur : {{ user.username }}</h1>
    <h2>Mes parties en cours</h2>

    <div>
        <ul>
            {% for partie in user.parties %}
                {% for partie in partie %}
                <li><a href="{{ path('afficher_partie', {'id':partie.id}) }}">#{{ partie.id }}</a></li>
                {% endfor %}
            {% else %}
                Aucune partie en cours. <a href="{{ path('joueur_parties_add') }}">Créer une partie</a>
            {% endfor %}
        </ul>
    </div>

    <h2>Créer une nouvelle partie</h2>

    <table class="table">
        {% for joueur in joueurs if joueur.username != user.username %}
            <tr>
                <td>{{ joueur.username }}</td>
                <td><a href="{{ path('creer_partie', {'joueur':joueur.id}) }}">Inviter à jouer</a></td>
            </tr>
        {% endfor %}
    </table>


    <a href="{{ path('joueur_homepage') }}">Retour</a>
{% endblock %}